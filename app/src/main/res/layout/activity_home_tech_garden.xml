<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fondo_app"
    android:id="@+id/viewRoot"
    android:layout_height="match_parent"
    tools:context=".ui.activity.HomeTechGarden"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_selected_option_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:foregroundGravity="center_horizontal"
        android:layout_marginTop="100dp">



        <TextView
            android:id="@+id/tv_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECCIONE UNA OPCION :"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            tools:ignore="HardcodedText"
            android:gravity="center"
            android:textAlignment="center"/>

        <RadioButton
            android:id="@+id/radio_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="AGREGAR UN DISPOSITIVO"
            tools:ignore="HardcodedText"
            android:layout_marginTop="15dp"/>

        <RadioButton
            android:id="@+id/radio_modify"
            android:layout_width="wrap_content"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:text="ACTUALIZAR UN DISPOSITIVO"
            tools:ignore="HardcodedText"/>

        <RadioButton
            android:id="@+id/radio_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="ELIMINAR UN DISPOSITIVO"
            tools:ignore="HardcodedText"/>

        <RadioButton
            android:id="@+id/radio_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="MOSTAR DETALLES DE LOS DISPOSITIVOS"
            tools:ignore="HardcodedText"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_device"
        android:text="Seleccione: Dispositivo"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText"
        android:visibility="invisible">
    </TextView>

   <Spinner
        android:id="@+id/device_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:contextClickable="true"
        android:entries="@array/array_devices"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_selspinneradd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:backgroundTint="#376243"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_selspinnerupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:backgroundTint="#376243"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_brand"
        android:layout_width="200dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Marca"
        tools:ignore="HardcodedText"
        android:textColor="#020A4A"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_model"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center"
        android:hint="Modelo"
        tools:ignore="HardcodedText"
        android:textColor="#020A4A"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_state"
        android:text="Estado Dispositivo"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText"
        android:visibility="invisible">
    </TextView>

    <Spinner
        android:id="@+id/state_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:contextClickable="true"
        android:entries="@array/array_states"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_cpu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="CPU"
        tools:ignore="HardcodedText"
        android:textColor="#020A4A"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_ram"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="RAM"
        tools:ignore="HardcodedText"
        android:textColor="#020A4A"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_imei"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="IMEI"
        tools:ignore="HardcodedText"
        android:textColor="#020A4A"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_pantalla"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="TamaÃ±o Pantalla Pulgadas"
        tools:ignore="HardcodedText"
        android:textColor="#020A4A"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dualsim"
        android:text="Dispositivo DualSIM"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText"
        android:visibility="invisible">
    </TextView>

    <Spinner
        android:id="@+id/dualsim_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:contextClickable="true"
        android:entries="@array/array_dualsim"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#376243"
        android:text="Adicionar Dispositivo"
        tools:ignore="HardcodedText"
        android:layout_marginTop="40dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_remove_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#376243"
        android:text="Eliminar Dispositivo"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_device_to_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center"
        android:hint="Identificador Dispositivo"
        tools:ignore="HardcodedText"
        android:textColor="#020A4A"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_modify_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#376243"
        android:text="Actualizar Dispositivo"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_show_device_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#376243"
        android:text="Mostrar Detalles Dispositivos"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:backgroundTint="#376243"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:textIsSelectable="true"/>

</LinearLayout>


